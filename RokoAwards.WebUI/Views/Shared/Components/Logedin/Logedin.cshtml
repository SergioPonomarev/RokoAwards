@model RokoAwards.EFDataAccessLibrary.Models.User

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="UserProfile" asp-controller="User" asp-route-email="@Model.Email">
                <img class="loggedinUserImage" src="@Url.Content(Model.Image.ImagePath)" />
                @Model.Email
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark" asp-action="Logout" asp-controller="Account">Logout</a>
        </li>
    }
</ul>